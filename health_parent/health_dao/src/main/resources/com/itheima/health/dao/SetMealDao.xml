<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<!-- namespace:要关联的接口的全限定名 -->
<mapper namespace="com.itheima.health.dao.SetMealDao">

    <select id="findPage" parameterType="String" resultType="SetMeal">
        select * from t_setmeal
        <where>
            <if test="value != null and value.length > 0">
                name like #{queryString} or code like #{queryString} or remark like #{queryString}
            </if>
        </where>
    </select>

    <select id="Count" parameterType="String" resultType="Long">
        select count(*) from t_setmeal
        <where>
            <if test="value != null and value.length > 0">
                name like #{queryString} or code like #{queryString} or remark like #{queryString}
            </if>
        </where>
    </select>

    <select id="findById" parameterType="_int" resultType="SetMeal">
        select * from t_setmeal where id = #{id}
    </select>

    <insert id="add" parameterType="SetMeal" keyProperty="id" useGeneratedKeys="true">
        insert into t_setmeal(name,code,helpCode,sex,age,price,remark,attention,img)
        values (#{name},#{code},#{helpCode},#{sex},#{age},#{price},#{remark},#{attention},#{img})
    </insert>

    <insert id="addSetMealByCheckGroupId" parameterType="int">
        insert into t_setmeal_checkgroup (setmeal_id,checkgroup_id)
        values(#{setMeaId},#{checkGroupId})
    </insert>

    <select id="findCheckGroupIdsBySetmealId" parameterType="int" resultType="int">
        select checkgroup_id from t_setmeal_checkgroup where setmeal_id = #{id}
    </select>

    <update id="update" parameterType="SetMeal">
        update t_setmeal
        set
            name=#{name},
            code=#{code},
            helpCode=#{helpCode},
            sex=#{sex},
            age=#{age},
            price=#{price},
            remark=#{remark},
            attention=#{attention},
            img=#{img}
        where id=#{id}
    </update>

    <delete id="deleteCheckGroupIdsBySetMealId" parameterType="int">
        delete from t_setmeal_checkgroup where setmeal_id = #{id}
    </delete>

    <insert id="addSetMealByCheckGroupIds">
        insert into t_setmeal_checkgroup (setmeal_id,checkgroup_id) values (#{setMealId},#{checkGroupId})
    </insert>

    <select id="findImgs" resultType="String">
        select img from t_setmeal
    </select>
</mapper>